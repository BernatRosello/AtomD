<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.experiment.LatencyParametersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- RecyclerView of existing latency experiments -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Latency_Experiment_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:background="@drawable/layout_border" />

        <!-- CREATE NEW EXPERIMENT UI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:background="@drawable/layout_border">

            <!-- Custom Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/Latency_Experiment_Custom_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Experiment Name" />

                <EditText
                    android:id="@+id/Latency_Experiment_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:enabled="false"
                    android:hint="Experiment name"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Number of samples -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of repetitions:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/Latency_Experiment_Samples"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ems="4"
                    android:hint="5"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Submit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="9dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ping emission mode:"
                    android:textSize="18sp" />

                <Switch
                    android:id="@+id/Latency_Experiment_Emission_Mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SERIES" />
            </LinearLayout>

            <Button
                android:id="@+id/Latency_Experiment_Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Create Latency Experiment" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
